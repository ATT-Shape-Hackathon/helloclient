<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="nickyhuynh.helloworld">


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:name=".app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".message.SendMessageActivity"/>
        <activity android:name=".message.ShowMessageActivity"/>
        <activity android:name=".profile.RevenueActivity"/>
        <activity android:name=".profile.SettingsActivity"/>
        <activity android:name=".profile.HelpActivity"/>
    </application>

</manifest>
